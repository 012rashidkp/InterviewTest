<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ss_neumorphic_background"
    android:id="@+id/detailscreen"
    tools:context=".Fragments.DetailFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent">
    <LinearLayout
        android:id="@+id/viewlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="first Name : "
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/detailfname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytxt"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="last Name : "
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/detaillname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytxt"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="Email : "
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/detailemail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytxt"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="phone : "
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/detailphone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytxt"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="Experience : "
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/detailexp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytxt"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="11.2dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="@android:color/black"
                android:text="Created At : "
                android:textStyle="normal"
                />
            <TextView
                android:id="@+id/detailcreatedat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mytxt"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:textStyle="normal"
                android:layout_marginLeft="15dp"/>

        </LinearLayout>


    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detailprogressbar"
        android:visibility="visible"
        android:progressTint="@color/darkcyan"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/darkcyan"
        android:layout_centerInParent="true"
        />
</RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>